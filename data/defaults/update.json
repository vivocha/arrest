{
  "summary": "Update a <%- name %>",
  "description": "",
  "operationId": "<%- name %>.update",
  "parameters": [
    {
      "$ref": "#/parameters/id"
    },
    {
      "description": "The updated <%- name %>, minus the unique identifier and the metatadata",
      "name": "body",
      "in": "body",
      "required": true,
      "schema": {
        "allOf": [
          { "$ref": "#/definitions/<%- name %>" }
        ],
        "not": {
          "allOf": [
            { "$ref": "#/definitions/hasMetadata" },
            { "$ref": "#/definitions/hasObjectId" }
          ]
        }
      }
    }
  ],
  "responses": {
    "200": {
      "description": "<%- name %> successfully updated",
      "schema": {
        "allOf": [
          { "$ref": "#/definitions/<%- name %>" },
          { "$ref": "#/definitions/hasMetadata" },
          { "$ref": "#/definitions/hasObjectId" }
        ]
      }
    },
    "404": { "$ref": "#/responses/notFound" },
    "default": { "$ref": "#/responses/defaultError" }
  }
}