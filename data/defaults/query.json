{
  "summary": "Retrieve a list of <%- namePlural %>.",
  "description": "",
  "operationId": "<%- name %>.query",
  "parameters": [
    {
      "$ref": "#/parameters/limit"
    },
    {
      "$ref": "#/parameters/skip"
    },
    {
      "$ref": "#/parameters/fields"
    }
  ],
  "responses": {
    "200": {
      "description": "List of matching <%- namePlural %>",
      "schema": {
        "type": "array",
        "items": {
          "allOf": [
            { "$ref": "#/definitions/<%- name %>" },
            { "$ref": "#/definitions/hasMetadata" },
            { "$ref": "#/definitions/hasObjectId" }
          ]
        }
      },
      "headers": {
        "Link": { "$ref": "#/definitions/link" },
        "Results-Matching": { "$ref": "#/definitions/matching" },
        "Results-Skipped": { "$ref": "#/definitions/skipped" }
      }
    },
    "default": { "$ref": "#/responses/defaultError" }
  }
