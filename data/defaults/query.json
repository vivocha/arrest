{
  "summary": "Retrieve a list of <%- namePlural %>",
  "description": "",
  "operationId": "<%- name %>.query",
  "parameters": [
    {
      "$ref": "#/parameters/limit"
    },
    {
      "$ref": "#/parameters/skip"
    },
    {
      "$ref": "#/parameters/fields"
    },
    {
      "$ref": "#/parameters/query"
    }
  ],
  "responses": {
    "200": {
      "description": "List of matching <%- namePlural %>",
      "schema": {
        "type": "array",
        "items": <%- JSON.stringify(schema) %>
      },
      "headers": {
        "Link": {
          "description": "Data pagination links, as described in RFC5988. Currently only rel=next is supported",
          "type": "string"
        },
        "Results-Matching": {
          "description": "Total number of resources matching the query",
          "type": "integer",
          "minimum": 0
        },
        "Results-Skipped": {
          "description": "Number of resources skipped to return the current batch of resources",
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "default": { "$ref": "#/responses/defaultError" }
  }
}