{
  "title": "A JSON Schema for an API resource, i.e. a collection of related path-method combinations.",
  "id": "https://raw.githubusercontent.com/vivocha/arrest/master/data/schemas/resource.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    { "$ref": "http://swagger.io/v2/schema.json#/definitions/tag" }
  ],
  "definitions": {
    "routesArray": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://raw.githubusercontent.com/vivocha/arrest/master/data/schemas/operation.json#"
      }
    }
  },
  "required": [ "schemas", "routes" ],
  "properties": {
    "namePlural": {
      "description": "Plural version of the _name_. By default an _s_ is appended to the _name_",
      "type": "string"
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "default": "_id"
    },
    "title": {
      "description": "Name of the property storing a brief description of the resource to be displayed, for instance, in a list. If omitted, the _id_ can be used instead",
      "type": "string"
    },
    "schemas": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "default": {
          "$ref": "http://swagger.io/v2/schema.json#/definitions/schema"
        }
      },
      "additionalProperties": {
        "type": "object",
        "minProperties": 2,
        "additionalProperties": false,
        "properties": {
          "request": {
            "$ref": "http://swagger.io/v2/schema.json#/definitions/schema"
          },
          "response": {
            "$ref": "http://swagger.io/v2/schema.json#/definitions/schema"
          }
        }
      }
    },
    "definitions": {
      "$ref": "http://swagger.io/v2/schema.json#/definitions/definitions"
    },
    "parameters": {
      "$ref": "http://swagger.io/v2/schema.json#/definitions/parameterDefinitions"
    },
    "scopes": {
      "$ref": "http://swagger.io/v2/schema.json#/definitions/oauth2Scopes"
    },
    "routes": {
      "$ref": "#/definitions/routesArray"
    },
    "additionalRoutes": {
      "$ref": "#/definitions/routesArray"
    }
  }
}