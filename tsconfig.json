{
  "compilerOptions": {
    "incremental": true,
    "module": "es2020",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"]
}
