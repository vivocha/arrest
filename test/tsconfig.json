{
  "compilerOptions": {
    "incremental": true,
    "module": "es2020",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["./**/*"]
}
